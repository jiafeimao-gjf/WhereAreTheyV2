<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/warm_orange</item>
        <item name="colorPrimaryDark">@color/warm_orange_dark</item>
        <item name="colorAccent">@color/warm_accent</item>
        <item name="android:windowBackground">@color/warm_background</item>
    </style>
    
    <!-- 暖色调主题 -->
    <style name="WarmAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/warm_orange</item>
        <item name="colorPrimaryDark">@color/warm_orange_dark</item>
        <item name="colorAccent">@color/warm_accent</item>
        <item name="android:windowBackground">@color/warm_background</item>
    </style>
    
    <!--统一样式设置-->
    <style name="TabButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_color_selector</item>
    </style>
    
    <!-- 设置页面按钮样式 -->
    <style name="SettingButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/button_warm_selector</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/warm_text</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
