<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/half_yellow">
            <ImageView
                android:id="@+id/iv_headImage"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_head_image"
                android:contentDescription="@string/icon"
                android:padding="1dp"/>
            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:text="@string/userName"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:padding="1dp"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:layout_margin="3dp"/>
            <Button
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="@string/login_button1"
                android:layout_gravity="end|center"
                android:textSize="20sp"
                android:textColor="@color/half_blue"
                android:padding="3dp"
                android:background="@color/transparent"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"
            android:layout_margin="1dp"/>
        <Button
            android:id="@+id/btn_changeMyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:text="@string/changeUserName"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:layout_marginLeft="20dp"
            android:padding="3dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/btn_changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:text="@string/changePassword"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:layout_marginLeft="20dp"
            android:padding="3dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/btn_addFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:text="@string/addFriendByName"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:layout_marginLeft="20dp"
            android:padding="3dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/btn_displayFriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:text="@string/displayFriends"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:layout_marginLeft="20dp"
            android:padding="3dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black"
            android:layout_margin="3dp"/>
        <Button
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center"
            android:text="@string/settings"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:layout_marginLeft="20dp"
            android:padding="3dp"/>
    </LinearLayout>


</FrameLayout>